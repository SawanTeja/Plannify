{
  "cli": {
    "version": ">= 7.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      }
    },
    "offline-preview": {
      "extends": "preview",
      "env": {
        "APP_VARIANT": "offline"
      }
    },
    "offline-production": {
      "extends": "production",
      "env": {
        "APP_VARIANT": "offline"
      }
    }
  }
}
